    <script>
        document.getElementById("exampleFormControlTextarea1").value = "<%=productData.description%>";
        function validateInput() {
            // Clear previous error messages
            document.getElementById('product_name_error').textContent = '';
            document.getElementById('model_name_error').textContent = '';
            document.getElementById('outer_material_error').textContent = '';
            document.getElementById('ideal_for_error').textContent = '';
            document.getElementById('stock_error').textContent = '';
            document.getElementById('og_price_error').textContent = '';
            document.getElementById('offer_price_error').textContent = '';

            let product_name = document.getElementById('product_name').value;
            let model_name = document.getElementById('model_name').value;
            let outer_material = document.getElementById('outer_material').value;
            let ideal_for = document.getElementById('ideal_for').value;
            let stock = document.getElementById('stock').value;
            let og_price = document.getElementById('og_price').value;
            let offer_price = document.getElementById('offer_price').value;

            let isValid = true;

            if (product_name.trim() === '') {
                document.getElementById('product_name_error').textContent = 'Product Name is required';
                isValid = false;
            }

            if (model_name.trim() === '') {
                document.getElementById('model_name_error').textContent = 'Model Name is required';
                isValid = false;
            }
            if (outer_material.trim() === '') {
                document.getElementById('outer_material_error').textContent = 'Outer material is required';
                isValid = false;
            }
            if (ideal_for.trim() === '') {
                document.getElementById('ideal_for_error').textContent = 'Give valid Data';
                isValid = false;
            }
            if (stock < 0 || stock.trim() === '') {
                document.getElementById('stock_error').textContent = 'Stock is not valid';
                isValid = false;
            }
            if (og_price <= 0) {
                document.getElementById('og_price_error').textContent = 'Please enter valid price';
                isValid = false;
            }
            const offerPrice = parseFloat(offer_price);
            const ogPrice = parseFloat(og_price);
            if (offerPrice > ogPrice) {
                document.getElementById('offer_price_error').textContent = 'Give valid price';
                isValid = false;
            }
            if (offer_price <= 0) {
                document.getElementById('offer_price_error').textContent = 'Give valid price';
                isValid = false;
            }
            if (isValid) {
                return true;  // Allow form submission
            }
            return false;
        }

