<%-include('../layouts/header.ejs')%>
<style>
  .form-control:focus{
    box-shadow: none;
  }
</style>
<section class="vh-100 gradient-custom">
    <div class="container py-3 h-100 bg-light">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card text-dark" style="border-radius: 1rem;background-color: #f4f4f4;">
                <div class="card-body p-3 text-center">                         
                  <div class="pb-2 mt-md-4">
                    <form action="/login" method="post"> 
                    <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                    <p class="text-dark-50 mb-5">Please enter your Email and password!</p>
      
                    <div class="form-outline form-white mb-4">
                      <input type="email" id="typeEmailX" class="form-control form-control-lg" name="email" placeholder="enter your email" required style="font-size: medium;"/>
                    </div>
      
                    <div class="form-outline form-white mb-4">
                      <input type="password" id="typePasswordX" class="form-control form-control-lg" name="password" placeholder="enter your password" required style="font-size: medium;">
                    </div>
                        <button class="btn btn-lg px-5 rounded" type="submit" style="background-color: #959595;">Login</button>                    
                  </div>
                </form>
                <div class="d-flex justify-content-center align-items-center">
                  <p style="color: rgb(41, 101, 41);" class="text-muted small"><%=(typeof message!=='undefined' )?message:""%></p>
              </div>
                <div class="mt-md-4">
                        <p class="small"><a href="/forgot" style="color: black;text-decoration: none; font-weight: 400;">Forgot password?</a></p>
                </div>
                  <div class="mb-2">
                        <p class="mb-2">Don't have an account? <a href="/register" style="color: black;text-decoration: none;font-weight: bold;">Sign Up</a>
                        </p>
                  </div>
                </div>
              </div>
        </div>
      </div>
    </div>
  </section>
<%-include('../layouts/footer.ejs')%>
